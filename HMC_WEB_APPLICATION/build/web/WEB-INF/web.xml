<?xml version="1.0" endcoding="UTF-8" ?>
<web-app xmlns="https://java.sun.com/xml/ns/j2ee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="https://java.sun.com/xml/ns/j2ee
                      https://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
  version="2.4"
  metadata-complete="true">
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
	<context-param>
		<param-name>db</param-name>
		<param-value>/WEB-INF/database/HMC_RECORDS</param-value>
	</context-param>
	
	<listener>
		<listener-class>hmc_controller.DBServletContextListener</listener-class>
	</listener>
</web-app>